<html>
    <head>
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>
            Login Form
        </title>
        <link href="http://localhost:3000/stylesheets/Login_css.css" rel="stylesheet">
    </head>
    <body>
		<img src="http://localhost:3000/images/Wave2.jpg" class="wave"> 
        <div  class="size ">
            <form action="/home/authUser" method="POST">
                <div>
                    <div>
						<img src="https://www.daiict.ac.in/wp-content/uploads/2019/01/logo-2018.png" class="img1 img-responsive"/>
                    </div>
                </br>
                    <div class="card container">
                        <div class="input-group">
                            <input type="text" placeholder="Enter Username" name="userID" id="uname"  required>   
                        </div>
                        <span id="error-ID" style="color:red;"></span>
                        <br/>
                        <br/>
                        <div class="input-group">
                            <input type="password" placeholder="Enter Password" name="password" id="psw"  required>
                        </div>
                        <span id="error-password" style="color:red;"></span>
                        <br/>
                        <br/>
                            <button type="submit">Login</button>
                            <label>
                              <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>
                    </div>

                    
                    <div class="container" style="background-color:#f1f1f1">
                            <button type="button" class="cancelbtn" onclick="location.href='Registration.html';">Create Account</button>
                            <br/>
                            <center><a href="ForgotPassword.html" style="color:blue"> Forgot password?</a></center>
                    </div>
                </div>
            </form>
        </div>
        <script src="http://localhost:3000/javascripts/login.js"></script>
	</body>
	<div class="row">

	</div>
</html>



